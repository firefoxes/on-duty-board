!!! 5
%html
  %head
    %title= "Phase 4 On Duty"
    %link{href: "/css/main.css", media: "screen", rel: "stylesheet"}
    :javascript
      // reload every 5 minutes
      var reload = function() { window.location.reload(); }
      setInterval(reload, 1000*60*5);
  %body
    %header
      %h1
        Phase 4 On Duty for
        = @today.strftime("%A")
      %p
        %a{href: "/week"} Go to Weekly View

    .container
      - @board.lists.each do |list|
        - if list.name == @today.strftime("%A")
          .list
            - list.cards.each do |card|
              .card.daycard
                %h3= card.name
                - card.members.each do |member|
                  %img{src: member.avatar_url}
                  = member.full_name
                  %br
